
<h2 align="center">Title: <%= @article.title %></h2>

<div class="spacetop">
<h4 class="center description">description:</h4> 
</div>

<div class="row">
    <div class="well col-xs-offset-2 col-xs-8">
        <%= simple_format(@article.description) %>
    </div>
</div>

<div class="row">
    <div class="article_actions col-xs-offset-2">
        <%= link_to "Edit this article", edit_article_path(@article), class:"btn btn-primary col-xs-2" %>
        <%= link_to "Delete this article", article_path(@article), 
            method: :delete, data: { confirm: "Are you sure you want to delete this article?" }, class:"btn btn-danger col-xs-2 space" %>
        <%= link_to "Back to articles Listing", articles_path, class:"btn btn-success col-xs-2 space" %>
    </div>
</div>