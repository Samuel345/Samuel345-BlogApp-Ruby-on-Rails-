
<%= render "shared/errors", obj: @user %>
<div class="row">
    <div class="col-xs-12">
        <%= form_for(@user, :html => {class:"form-horizontal", role:"form"}) do |f| %>
            <div class="form-group">
                <div class="control-label col-xs-2">
                    <%= f.label :username %>
                </div>
                <div class="col-xs-8">        
                    <%= f.text_field :username, class:"form-control", placeholder:"Enter username", autofocus: true %>
                </div>
            </div>
        
            <div class="form-group">
                <div class="col-xs-2 control-label">
                    <%= f.label :email %>
                </div>
                <div class="col-xs-8">
                    <%= f.email_field :email, class:"form-control", placeholder:"Enter email", autofocus:true %>
                </div>
            </div>
            
            <div class="form-group">
                <div class="col-xs-2 control-label">
                    <%= f.label :password %>
                </div>
                <div class="col-xs-8">
                    <%= f.password_field :password, class:"form-control", autofocus:true %>
                </div>
            </div>     
            
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <%= f.submit "Signup", class: "btn btn-primary col-xs-2" %>
                    <%= link_to "Cancel", users_path, class:"btn btn-danger space col-xs-2" %>
                </div>
            </div>
        
        <% end %>
    </div>
</div>
